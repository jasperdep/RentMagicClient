@model List<Customer>;

@{
    ViewBag.Title = "Overzicht | Exact Online";
    Layout = "../_Layout.cshtml";
}

    <div class="content-table">

        <div class="table-title">
            <h1>Exact Online Overzicht</h1>
            <button type="button" class="btn btn-rentmagic" onclick="location.href='@Url.Action("Create", "Exact")'">Nieuwe Customer</button>
        </div>

        <table class="table table-striped">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Country</th>
                    <th>StateName</th>
                    <th>Language</th>
                    <th>City</th>
                    <th>Addressline</th>
                    <th>Phone</th>
                    <th>Postcode</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var customer in Model)
                {
                    <tr>
                        <td>@customer.CompanyName</td>
                        <td>@customer.Email</td>
                        <td>@customer.CountryID</td>
                        <td>@customer.State</td>
                        <td>@customer.LanguageID</td>
                        <td>@customer.City</td>
                        <td>@customer.HouseNumber</td>
                        <td>@customer.Tel</td>
                        <td>@customer.ZipCode</td>
                    </tr>
                }
            </tbody>
        </table>
    </div>